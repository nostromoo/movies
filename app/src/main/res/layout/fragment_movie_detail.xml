<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="fragment"
            type="com.romain.pedepoy.movies.moviedetail.MovieDetailFragment" />
        <variable
            name="viewModel"
            type="com.romain.pedepoy.movies.moviedetail.MovieDetailViewModel" />
    </data>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/picture"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:scaleType="centerCrop"
                app:imageFromUrl="@{viewModel.movie.cover}"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintDimensionRatio="3:2"/>
            <Button
                android:id="@+id/playButton"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:onClick="@{()->fragment.goToPlayer(viewModel.movie)}"
                app:layout_constraintStart_toStartOf="@+id/picture"
                app:layout_constraintEnd_toEndOf="@+id/picture"
                app:layout_constraintBottom_toBottomOf="@+id/picture"
                app:layout_constraintTop_toTopOf="@+id/picture"
                app:layout_constraintDimensionRatio="1:1"
                android:background="@drawable/ic_play"/>
            <TextView
                android:id="@+id/synopsis"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:text="@{viewModel.movie.synopsis}"
                android:textColor="@android:color/black"
                android:fontFamily="@font/canaro_bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/picture"/>
            <TextView
                android:id="@+id/releaseDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:text="@{viewModel.movie.releaseLabel()}"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/synopsis"
                style="@style/TextMovieDetail"/>
            <TextView
                android:id="@+id/rating"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:text="@{viewModel.movie.ratingLabel()}"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/releaseDate"
                style="@style/TextMovieDetail"/>
            <TextView
                android:id="@+id/directors"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:text="@{viewModel.movie.directorsLabel()}"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rating"
                style="@style/TextMovieDetail"/>
            <TextView
                android:id="@+id/writers"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:text="@{viewModel.movie.writersLabel()}"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/directors"
                style="@style/TextMovieDetail"/>
            <TextView
                android:id="@+id/actors"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:text="@{viewModel.movie.actorsLabel()}"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/writers"
                style="@style/TextMovieDetail"/>
            <TextView
                android:id="@+id/officialSiteLabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:paddingStart="20dp"
                android:text="Official site : "
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/actors"
                style="@style/TextMovieDetail"/>
            <TextView
                android:id="@+id/officialSite"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingStart="20dp"
                android:paddingBottom="20dp"
                android:text="@{viewModel.movie.officialUrl}"
                android:textColor="@color/blue_link"
                android:textSize="16sp"
                android:onClick="@{() -> viewModel.goToOfficialSite(fragment.requireContext())}"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/officialSiteLabel"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>
